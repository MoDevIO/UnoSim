{
  "files.exclude": {
    "vite.config.ts": true,
    "vercel.json": true,
    "test-vercel-build.sh": true,
    "tsconfig.json": true,
    "tailwind.config.ts": true,
    "screenshot.png": true,
    "README copy.md": true,
    "postcss.config.js": true,
    "package-lock.json": true,
    "LICENSE": true,
    "jest.config.js": true,
    "drizzle.config.ts": true,
    "components.json": true,
    "build.sh": true,
    ".vercelignore": true,
    ".gitlab-ci.yml": true,
    "node_modules": true,
    "temp": true
  },
  "chat.tools.terminal.autoApprove": {
    "npm ls": true,
    "npm uninstall": true,
    "timeout": true,
    "/^node -e \"require\\('@playwright/test'\\); console\\.log\\('PW-OK'\\)\"$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^node -e \"console\\.log\\(Object\\.keys\\(require\\('@playwright/test'\\)\\)\\);\"$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^node scripts/screenshot\\.js$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^node scripts/screenshot\\.cjs$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "mkdir": true,
    "git add": true,
    "git commit": true,
    "git push": true,
    "git mv": true,
    "/^python3 --version$/": {
      "approve": true,
      "matchCommandLine": true
    }
  }
}
