  "chat.tools.terminal.autoApprove": {
    "npm ls": true,
    "npm uninstall": true,
    "timeout": true,
    "/^node -e \"require\\('@playwright/test'\\); console\\.log\\('PW-OK'\\)\"$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^node -e \"console\\.log\\(Object\\.keys\\(require\\('@playwright/test'\\)\\)\\);\"$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^node scripts/screenshot\\.js$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/^node scripts/screenshot\\.cjs$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "mkdir": true
  }
